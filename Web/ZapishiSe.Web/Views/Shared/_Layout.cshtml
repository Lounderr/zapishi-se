@using ZapishiSe.Common
<!DOCTYPE html>
<html lang="bg">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta content="" name="description">
    <meta content="" name="keywords">
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>

    <link rel="stylesheet" href="~/css/shared/reset.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" asp-append-version="true" />
    @* Temporary icons for navbar *@
    <link rel="stylesheet" href="~/fonts/icomoon/style.css" asp-append-version="true">

    <link rel="stylesheet" href="~/css/shared/customBootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/shared/navbar.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/shared/shared.min.css" asp-append-version="true" />

    @await this.RenderSectionAsync("Styles", required: false)
</head>

<body>
    <partial name="_NavbarPartial" />

    @if ((bool)(ViewData["isNavSolid"] ?? true))
    {
        <div id="page-top-margin"></div>
    }

    <main role="main">
        @this.RenderBody()
    </main>
    
    <partial name="_CookieConsentPartial" />

    <footer class="align-items-center justify-content-center text-center w-100 p-4">
        <span class="text-white lh-sm">&copy; Copyright <strong class="fw-semibold">Georgi Georgiev</strong>. All Rights Reserved</span>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    
    @* jQuery validation scripts should be in _ValidationScriptsPartial.cshtml files *@
    @*     
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    *@    

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-sticky/jquery.sticky.min.js" asp-append-version="true"></script>
    <script src="~/js/shared/navbar.js" asp-append-version="true"></script>
    <script src="~/js/shared/shared.js" asp-append-version="true"></script>

    @await this.RenderSectionAsync("Scripts", required: false)
</body>

</html>