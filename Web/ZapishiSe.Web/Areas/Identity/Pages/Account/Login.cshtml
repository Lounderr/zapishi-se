@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@section Styles {
    <link rel="stylesheet" href="~/css/authenticate.min.css" asp-append-version="true" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<section class="auth-form-container container-fluid d-flex flex-column align-items-center mb-5">
    <div class="row w-100 py-4 g-0">
        <div class="col"></div>
        <img class="col text-center page-logo" src="~/assets/logoTextInverted.svg" />
        <div class="col"></div>
    </div>

    <form class="p-4 rounded row w-100 bg-white rounded auth-form-container control-shadow" style="max-width: 500px;">
        <h2 class="h3 text-center my-2 fw-semibold">Влезте в своя профил</h2>

        <div class="d-flex flex-column gap-3 my-4 g-0">
            <div class="t-text-field">
                <label for="email" class="input-label">Имейл</label>
                <input id="email" required type="email" class="form-control" placeholder="Имейл адрес">
            </div>

            <div class="t-text-field">
                <label for="password" class="input-label">Парола</label>
                <input id="password" required type="password" class="form-control" placeholder="Парола">
            </div>

            <label class="checkbox-container d-flex justify-content-center">
                <input required type="checkbox" />
                <span>Запомни ме</span>
            </label>
        </div>

        <button class="t-btn t-btn-blue w-100 ">Вписване</button>
    </form>
</section>

