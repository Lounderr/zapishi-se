@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@section Styles {
    <link rel="stylesheet" href="~/css/authenticate.min.css" asp-append-version="true" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<section class="auth-form-container container-fluid d-flex flex-column align-items-center mb-5">
    <div class="row w-100 py-4 g-0">
        <div class="col"></div>
        <img class="col text-center page-logo" src="~/assets/logoTextInverted.svg" />
        <div class="col"></div>
    </div>

    <form class="p-4 rounded row w-100 bg-white rounded auth-form-container control-shadow" style="max-width: 500px;">
        <h2 class="h3 text-center my-2 fw-semibold">Създаване на профил</h2>

        <div class="d-flex flex-column gap-3 my-4 g-0">
            <div class="t-text-field">
                <label for="email" class="input-label">Имейл</label>
                <input id="email" required type="email" class="form-control" placeholder="Имейл адрес">
            </div>            
            
            <div class="t-text-field">
                <label for="firstName" class="input-label">Име</label>
                <input id="firstName" required type="text" class="form-control" placeholder="Име">
            </div>            
            
            <div class="t-text-field">
                <label for="lastName" class="input-label">Фамилия</label>
                <input id="lastName" required type="text" class="form-control" placeholder="Фамилия">
            </div>

            <div class="t-text-field">
                <label for="tel" class="input-label">Тел. номер</label>
                <input id="tel" required type="tel" class="form-control" placeholder="Тел. номер">
            </div>

            <div class="t-text-field">
                <label for="password" class="input-label">Парола</label>
                <input id="password" required type="password" class="form-control" placeholder="Парола">
            </div>

            <div class="t-text-field">
                <label for="confirmPassword" class="input-label">Потвърждаване на парола</label>
                <input id="confirmPassword" required type="password" class="form-control" placeholder="Потвърждаване на парола">
            </div>

            <label class="checkbox-container d-flex justify-content-center">
                <input required type="checkbox" />
                <span>Приемам <a href="#">общите условия</a>.</span>
            </label>
        </div>

        <button class="t-btn t-btn-blue w-100 ">Регистрирайте се</button>
    </form>
</section>

